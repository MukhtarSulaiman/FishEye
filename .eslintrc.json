{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "quotes": ["error", "single"],
        "import/extensions": ["error", "always"],
        "import/prefer-default-export": ["off"],
        "arrow-parens": [2, "as-needed", { "requireForBlockBody": true }],
        "radix": ["error", "as-needed"],
        "no-multiple-empty-lines": ["error", { "max": 2, "maxEOF": 0 }]
    }
}
